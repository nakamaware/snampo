{
    // Flutter/Dart設定
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "Dart-Code.dart-code",
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit"
        },
        "editor.rulers": [
            100
        ]
    },
    // Python設定
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit"
        },
        "editor.rulers": [
            100
        ]
    }
}
